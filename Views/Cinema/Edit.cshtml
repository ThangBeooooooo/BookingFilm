@model BookingFilm.RapChieu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>
        // Hiển thị cửa sổ thông báo với nội dung từ biến ViewBag.ErrorMessage
        alert(@Html.Raw(Json.Encode(ViewBag.ErrorMessage)));
    </script>
}

<form action="/Cinema/Edit/@Model.MaRC" method="post" id="addFoodForm" enctype="multipart/form-data">
    <input type="hidden" id="cinemaID" name="MaRC" value="@Model.MaRC">
    <label for="cinemaName">Cinema Name:</label><br>
    <input type="text" id="cinemaName" name="TenRC" value="@Model.TenRC"><br>
    <label for="cinemaAddress">Address:</label><br>
    <input type="text" id="cinemaAddress" name="DiaChi" value="@Model.DiaChi"><br>
    <input type="submit" value="Edit Cinema">
    <a href="~/food"></a>
</form>
<style>
    form {
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f8f8f8;
    }

    input {
        margin-top: -25px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        margin-top: 30px
    }

    input[type="text"], input[type="number"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    input[type="submit"] {
        display: block;
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        border: none;
        border-radius: 5px;
        background-color: #007BFF;
        color: white;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    label {
        display: block;
    }
</style>


