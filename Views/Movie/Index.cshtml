
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<BookingFilm.Phim>
<a href="@Url.Action("Create", "Movie")" class="btntest" style="border-radius: 10px; border: 1px solid; width: 100px; font-size: 16px; ">Add Movie</a>

<table class="table" style="overflow-x: auto;">
    <thead>
        <tr>
            <th>ID Moive</th>
            <th>Name Moive</th>
            <td>Movie Genre</td> @*The loai phim*@
            <th>Movie Duration</th> @*Thoi luong phim*@
            <th>Directorth</th> @*Dao Dien*@
            <th>Year of Manufacture</th> @*Nam san xuat*@
            <th>Movie Pictures</th> @*Hinh phim*@
            <th>Describe</th> @*Mo ta*@
            <th id="action">Action</th>
        </tr>
    <thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.MaPhim</td>
                <td>@movie.TenPhim</td>
                <td>@movie.TheLoai</td>
                <td>@movie.ThoiLuong</td>
                <td>@movie.DaoDien</td>
                <td>@movie.NamSanXuat</td>
                <td><img src="@movie.HinhPhim" style="width:150px; height:100px;" alt="Image"></td>
                <td>@movie.MoTa</td>
                <td>
                    <a @*href="@Url.Action("Edit", "User", new { maKH = movie.MaPhim })"*@ style="display: inline !important;">EDIT</a>
                    <a href="@Url.Action("Delete", "Movie", new { id = movie.MaPhim })" style="display: inline !important;" onclick="return confirm('Are you sure you want to delete this item?');">REMOVE</a>
                </td>

            </tr>
        }
    </tbody>
</table>


